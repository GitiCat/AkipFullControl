<UserControl x:Class="AkipFullControl.ConnectMethodButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:AkipFullControl"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:ConnectMethodDesignModel}"
             mc:Ignorable="d">
    <Button Command="{Binding ButtonCommand, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Content="{Binding ButtonName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />
</UserControl>
