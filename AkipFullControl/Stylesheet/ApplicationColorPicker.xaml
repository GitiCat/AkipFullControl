<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="TransparentColor">Transparent</Color>
    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource TransparentColor}" />

    <Color x:Key="WhiteColor">#FFFFFF</Color>
    <SolidColorBrush x:Key="WhiteColorBrush" Color="{StaticResource WhiteColor}" />

    <Color x:Key="MainBorderColor">#8FC644</Color>
    <SolidColorBrush x:Key="MainBorderColorBrush" Color="{StaticResource MainBorderColor}" />

    <Color x:Key="MouseOverColor">#E4E4E4</Color>
    <SolidColorBrush x:Key="MouseOverColorBrush" Color="{StaticResource MouseOverColor}" />

    <!--  ___Foreground____  -->
    <Color x:Key="MainForegroundColor">#FFC9C9C9</Color>
    <SolidColorBrush x:Key="MainForegroundColorBrush" Color="{StaticResource MainForegroundColor}" />

    <Color x:Key="GrayColor">#FF48525B</Color>
    <SolidColorBrush x:Key="GrayColorBrush" Color="{StaticResource GrayColor}" />

</ResourceDictionary>